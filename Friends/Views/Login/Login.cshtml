@using Friends.Models
@model Login
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<html>
<head>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-6">
                    <label>Mobile No</label>
                    @Html.TextBoxFor(m => m.MobileNo, new { id = "MobileNo" })
                    @Html.ValidationMessageFor(m => m.MobileNo)
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label>Password</label>
                    @Html.TextBoxFor(m => m.Password, new { id = "Password", type = "password" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="row">
                <h4 class="alert-danger">@ViewBag.Message</h4>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary" value="Login">Login</button>
                    @Html.ActionLink("Signup", "UserRegistration", "UserRegistration", null, new { @class = "btn btn-primary" })

                </div>
            </div>
        }
    </div>

    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

</body>



</html>




